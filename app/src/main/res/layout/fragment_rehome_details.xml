<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal|vertical"
        tools:context=".RehomeDetails">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Dog Details"
            android:textColor="@color/colorIcon"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:text="Name : "
            android:textColor="@color/colorIcon"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtDogName"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="50dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:text="Breed : "
            android:textColor="@color/colorIcon"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="100dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"
            android:text="Gender : "
            android:textColor="@color/colorIcon"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="140dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp"
            android:text="Size : "
            android:textColor="@color/colorIcon"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="180dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:text="Age : "
            android:textColor="@color/colorIcon"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="220dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="260dp"
            android:text="Description : "
            android:textColor="@color/colorIcon"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="250dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Name : "
            android:layout_marginLeft="30dp"
            android:layout_marginTop="300dp"
            android:textColor="@color/colorIcon"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/txtOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="290dp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number : "
            android:layout_marginLeft="30dp"
            android:layout_marginTop="340dp"
            android:textColor="@color/colorIcon"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/txtContactNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="330dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="420dp"
            android:text="Please attach a photo of the dog : "
            android:textColor="@color/colorIcon"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgViewUpload"
            android:layout_width="233dp"
            android:layout_height="200dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="450dp"
            android:background="@color/colorIcon" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="650dp"
            android:text="Upload" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="740dp"
            android:text="Reason(s) to rehome :"
            android:textColor="@color/colorIcon"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtReason"
            android:layout_width="233dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="760dp"
            android:background="@color/colorIcon"
            android:ems="10"
            android:inputType="textMultiLine"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="900dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="900dp"
            android:text="Submit" />

    </FrameLayout>
</ScrollView>
